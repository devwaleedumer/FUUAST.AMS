@using AMS.MODELS.MeritList
@model MeritListDataModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Merit List - Federal Urdu University</title>
    <style>
        @@page {
            size: A4;
            margin: 0;
        }
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .university-name {
            font-size: 24px;
            font-weight: bold;
        }
        .program-details {
            font-size: 18px;
            margin-top: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
        
    </style>
</head>
<body>

    <div class="header">
        <div class="university-name">
            Federal Urdu University Of Arts, Science & Technology, Islamabad
        </div>
        <div class="program-details">
            Program: @Model.Program<br>
            Department: @Model.Department<br>
            Shift: @Model.Shift<br>
            Session: @Model.Session
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Form No</th>
                <th>Name</th>
                <th>Father's Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.MeritListDetails)
            {
                <tr>
                    <td>@student.ApplicationId</td>
                    <td>@student.FullName</td>
                    <td>@student.FatherName</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>